{
  "name": "auth-template",
  "version": "1.0.0",
  "description": "Enterprise-grade authentication template with Clean Architecture",
  "private": true,
  "scripts": {
    "build": "pnpm -r --filter='@auth-template/*' run build",
    "build:core": "pnpm --filter='@auth-template/core' run build",
    "build:nestjs": "pnpm --filter='@auth-template/nestjs-adapter' run build",
    "build:demo": "pnpm --filter='demo-api' run build",
    "dev": "pnpm --filter='demo-api' run start:dev",
    "start": "pnpm --filter='demo-api' run start",
    "start:prod": "pnpm --filter='demo-api' run start:prod",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "clean": "pnpm -r run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
